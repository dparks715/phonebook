<form method="post" action="/phonebook">
<table>

<tr>
	<td>First Name</td>
	<td><input type="text" name='first_name'></td>
</tr>

<tr>
	<td>Last Name</td>
	<td><input type="text" name='last_name'></td>
</tr>

<tr>
	<td>Street Address</td>
	<td><input type="text" name='street_address'></td>
</tr>

<tr>
	<td>City</td>
	<td><input type="text" name='city'></td>
</tr>

<tr>
	<td>State</td>
	<td><input type="text" name='state'></td>
</tr>

<tr>
	<td>Zip</td>
	<td><input type="text" name='zip'></td>
</tr>

<tr>
	<td>Cell Phone</td>
	<td><input type="text" name='cell_phone'></td>
</tr>

<tr>
	<td>Home Phone</td>
	<td><input type="text" name='home_phone'></td>
</tr>

<tr>
	<td><input type="submit" value="Submit">
</tr>
</form>

<table class="table">
      <thead>
          <tr>
               <th>First Name</th>
               <th>Last Name</th>
               <th>Street Address</th>
               <th>City</th>
               <th>State</th>
               <th>Zip</th>
               <th>Cell Phone</th>
               <th>Home Phone</th>
           </tr>
       </thead>
       <tbody>
           <%phonebook.each do |contacts|%>
           <tr>
               <td><%=contacts["first_name"] %></td>
               <td><%=contacts["last_name"] %></td>
                <td><%=contacts["street_address"] %></td>
               <td><%=contacts["city"] %></td>
               <td><%=contacts["state"] %></td>
                <td><%=contacts["zip"] %></td>
               <td><%=contacts["cell_phone"] %></td>
                <td><%=contacts["home_phone"] %></td>
           </tr>
           <%end%>
       </tbody>
   </table>
   <br>
   <br>

   <form action='/update_column' method='post'>

   	<select name='table_column'>
		<option value='col_first_name'>First Name</option>
		<option value='col_last_name'>Last Name</option>
		<option value='col_address'>Street Address</option>
		<option value='col_city'>City</option>
		<option value='col_state'>State</option>
		<option value='col_zip'>Zip</option>
		<option value='col_cell'>Cell Number</option>
		<option value='col_home'>Home Number</option>
	</select>
	<br>

	   <input type="text" name="new_data"><br>
	   <input type="text" name="old_data"><br>
	   <input type="submit" value="Update">
   </form>

   <br>
   <br>

   <form action='/delete_all' method='post'>
   	<input type = "submit" value = "Burn It Down">
   </form>